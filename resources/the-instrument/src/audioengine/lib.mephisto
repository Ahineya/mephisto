export if_math(cond, a, b) {
    return cond * a + (1 - cond) * b;
}

export switch4(n, a, b, c, d) {
    return if_math(n == 0, a,
              if_math(n == 1, b,
              if_math(n == 2, c,
              if_math(n == 3, d, 0))));
}

export switch3(n, a, b, c) {
    return if_math(n == 0, a,
              if_math(n == 1, b,
              if_math(n == 2, c, 0)));
}

export clamp(x, a, b) {
    return min(max(x, a), b);
}

export lerp(a, b, t) {
    return a + (b - a) * t;
}


export sinewave(phase) {
    return sin(phase * 2 * PI);
}

export trianglewave(phase) {
    return 1 - 4 * abs(round(phase - 0.25) - (phase - 0.25));
}

export sawwave(phase) {
    return 2 * (phase - round(phase));
}

export squarewave(phase) {
    return ((phase < 0.5) * 2 - 1);
}

